<main class="col-md-8 main-content">

    <div>
        $!{res.get("result")}
    </div>

    <article id="0" class="post tag-about-ghost tag-release tag-ghost-0-7-ban-ben">
        <form class="form-horizontal" method="post" action="/snipper/blogs/blogUpdate">
            <input type="hidden" name="blogId" value="$!{res.get("blogId")}"/>

            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="title"
                       style="width: 200px" value="$!{res.get("title")}"/>
            </div>

            <div class="form-group">
                <input type="text" name="keywords" class="form-control" placeholder="keywords"
                       style="width: 200px" value="$!{res.get("keywords")}"/>
            </div>

            <div class="form-group">
                <textarea name="content" class="form-control" style="height: 500px;">$!{res.get("content")}</textarea>
            </div>

            <div class=" form-group">
                <button type="submit" name="file" class="btn btn-sm btn-primary">发布</button>
            </div>
        </form>
    </article>

</main>